<div class="container">
  <div class="wrapper">
    <div class="box user_pict">
      <img src='https://kitt.lewagon.com/placeholder/users/alex-felix' class="avatar-large"/>
      <img src="" alt="">

      <div class="box user_bookings">
        <div class="box user_ranting list-inline">

          <ul><div class="btn-primary btn_review">Artist profile</div></ul>

        </div>
      </div>




    </div>

    <div class="box user_info">
      <div class="box user_name">
        <span class="left_info_title"> Username: </span>
        <span class="user_details"> <%= @user.email %> </span>
      </div>

      <div class="box user_location">
        <span class="left_info_title"> Location: </span>
        <span class="user_details"> <%= @user.location %> </span>
      </div>

      <div class="box event_description">
        <span class="left_info_title"> Event: </span>
       <span class="user_details">
         <%#= @event_description %> </span>
        <% @events.each do |event| %>
        <% @artist = event.artist %>
        <%= event.description %>
          <% if event.status == "confirmed" %>
            <%= link_to "Review", new_artist_event_review_path(@artist, event), class: "btn_francois btn-primary"%>
          <% end %>
        <% end %>

      </div>
    </div>

    <div class="box user_agenda">
      <%# @events.each do |event| %>
        <%#= event.date %>
      <%# end %>

      <figure>
        <header>
         <script>
            var day = new Date().getDay();
              week = new Array('Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday');

            document.write(week[day]);
          </script>
        </header>
        <section>
          <script>
            document.write(new Date().getDate());
          </script>
        </section>
      </figure>
    </div>


