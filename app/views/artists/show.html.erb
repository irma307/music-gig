<h1><%= @artist.name %></h1>
<p>Location: <%= @artist.location %></p>
<p>Genre: <%= @artist.genre %></p>
<p>Price: <%= @artist.price %> euros</p>
<p>Description: <%= @artist.description %></p>
<p> Average Rating: <%= @average %> </p>
<p class="btn-primary btn" id="btn"> See all Reviews </p>
<div class="hide" id="reviews">
<ul>
 <% @artist.reviews.each do |review| %>
        <li> Description: <%= review.description %> </li>
        <li> Rating: <%= review.rating %> </li>
        <% end %>
</ul>
</div>





<%= link_to 'Back', root_path %> |
<%= link_to 'Create Event', new_artist_event_path(@artist) %>
<%= link_to 'Update', edit_artist_path(@artist) %>


<div class="wrapper">
  <div class="box artist_pict">A</div>
  <div class="box artist_info">
    <div class="box artist_name"> <%= @artist.name %></div>
    <div class="box artist_genre"> <%= @artist.genre %></div>
    <div class="box artist_location"> <%= @artist.location %></div>
    <div class="box artist_price"> <%= @artist.price %> euros</div>
  </div>
  <div class="box artist_agenda">C</div>
  <div class="box artist_description"> <%= @artist.description %> </div>
  <div class="box artist_music_link">E</div>
  <div class="box artist_ranting">
    <div class="box artist_stars"></div>
    <div class="box artist_reviews"></div>
  </div>

